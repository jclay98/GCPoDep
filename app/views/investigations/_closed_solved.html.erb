<% unless @closed_solved.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Recently Closed, Solved Cases</span>
      <table class="lined">
        <thead>
          <th>Case</th>
          <th>Date Closed</th>
        </thead>
          <% for investigation in @closed_solved %>
            <tr>
              <td>&nbsp;<%= link_to investigation.title, investigation_path(investigation) %></td>
              <td><%= investigation.date_closed.strftime("%m/%d/%y") %></td>
              
            </tr>
          <% end %>
      </table>
    </div>
  </div>
<% end%>
<br />