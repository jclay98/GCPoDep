<div class="card">
  <div class="card-content">
    <h5><%= best_in_place @criminal, :first_name, as: :input %> 
        <%= best_in_place @criminal, :last_name, as: :input %></h5><br />

    <b>Alias:&nbsp;&nbsp;</b><br>
      <%= best_in_place @criminal, :aka, as: :input %><br /><br />

    <b>Convicted Felon?&nbsp;&nbsp;</b>
      <%= @criminal.convicted_felon ? "Yes" : "No" %><br /><br />

    <b>Enhanced Powers?&nbsp;&nbsp;</b>
      <%= @criminal.enhanced_powers ? "Yes" : "No" %><br /><br />

    <b>Notes:&nbsp;&nbsp;</b><br />
      <%= @criminal.notes %><br /><br />
  </div>
</div>